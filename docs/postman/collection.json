{
	"info": {
		"name": "Transaction Payment Service",
		"description": "API collection for transaction payment service",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8081",
			"type": "string"
		},
		{
			"key": "api_key",
			"value": "",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "account_id",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": ["{{base_url}}"],
					"path": ["health"]
				}
			}
		},
		{
			"name": "Create User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200 || pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    if (response.data && response.data.id) {",
							"        pm.collectionVariables.set('user_id', response.data.id);",
							"        console.log('User ID:', response.data.id);",
							"    }",
							"    if (response.data && response.data.api_key) {",
							"        pm.collectionVariables.set('api_key', response.data.api_key);",
							"        console.log('API Key:', response.data.api_key);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Alice\",\n  \"email\": \"alice@example.com\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/users",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "users"]
				}
			}
		},
		{
			"name": "Get User",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-KEY",
						"value": "{{api_key}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/users/{{user_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "users", "{{user_id}}"]
				}
			}
		},
		{
			"name": "Create Account",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200 || pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    if (response.data && response.data.id) {",
							"        pm.collectionVariables.set('account_id', response.data.id);",
							"        console.log('Account ID:', response.data.id);",
							"        console.log('Ledger ID:', response.data.ledger_id);",
							"        console.log('Currency:', response.data.currency);",
							"        console.log('Balance:', response.data.balance);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "X-API-KEY",
						"value": "{{api_key}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"user_id\": \"{{user_id}}\",\n  \"currency\": \"USD\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/accounts",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "accounts"]
				}
			}
		},
		{
			"name": "Get All Accounts",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-KEY",
						"value": "{{api_key}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/accounts",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "accounts"]
				}
			}
		},
		{
			"name": "Get Account Balance",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-KEY",
						"value": "{{api_key}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/accounts/{{account_id}}/balance",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "accounts", "{{account_id}}", "balance"]
				}
			}
		},
		{
			"name": "Deposit to Account",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200 || pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    if (response.data) {",
							"        console.log('Transaction ID:', response.data.transaction_id);",
							"        console.log('Transfer ID:', response.data.transfer_id);",
							"        console.log('Amount:', response.data.amount);",
							"        console.log('New Balance:', response.data.new_balance);",
							"        console.log('Status:', response.data.status);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "X-API-KEY",
						"value": "{{api_key}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"amount\": 10000,\n  \"reference\": \"initial-topup-1\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/accounts/{{account_id}}/deposit",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "accounts", "{{account_id}}", "deposit"]
				}
			}
		},
		{
			"name": "Transfer Between Accounts",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200 || pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    if (response.data) {",
							"        console.log('Transfer ID:', response.data.transfer_id);",
							"        console.log('From Account:', response.data.from_account_id);",
							"        console.log('To Account:', response.data.to_account_id);",
							"        console.log('Amount:', response.data.amount);",
							"        console.log('From New Balance:', response.data.from_new_balance);",
							"        console.log('To New Balance:', response.data.to_new_balance);",
							"        console.log('Status:', response.data.status);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "X-API-KEY",
						"value": "{{api_key}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"from_account_id\": \"407b9824-0e8a-465c-9b55-22cd3018e6e7\",\n  \"to_account_id\": \"YOUR_TO_ACCOUNT_ID\",\n  \"amount\": 500,\n  \"reference\": \"order-123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/transfers",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "transfers"]
				}
			}
		},
		{
			"name": "Get Account Transaction History",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200 || pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    if (response.data) {",
							"        console.log('Transactions count:', response.data.transactions.length);",
							"        console.log('Has more:', response.data.has_more);",
							"        console.log('Next cursor:', response.data.next_cursor);",
							"        if (response.data.transactions.length > 0) {",
							"            console.log('First transaction:', response.data.transactions[0]);",
							"        }",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-KEY",
						"value": "{{api_key}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/accounts/{{account_id}}/transactions?limit=10",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "accounts", "{{account_id}}", "transactions"],
					"query": [
						{
							"key": "limit",
							"value": "10"
						}
					]
				}
			}
		},
		{
			"name": "Get Account Transaction History - Next Page",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200 || pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    if (response.data) {",
							"        console.log('Transactions count:', response.data.transactions.length);",
							"        console.log('Has more:', response.data.has_more);",
							"        console.log('Next cursor:', response.data.next_cursor);",
							"        if (response.data.transactions.length > 0) {",
							"            console.log('First transaction:', response.data.transactions[0]);",
							"        }",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-KEY",
						"value": "{{api_key}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/accounts/{{account_id}}/transactions?limit=10&after=YOUR_TRANSACTION_ID",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "accounts", "{{account_id}}", "transactions"],
					"query": [
						{
							"key": "limit",
							"value": "10"
						},
						{
							"key": "after",
							"value": "YOUR_TRANSACTION_ID"
						}
					]
				}
			}
		}
	]
}
